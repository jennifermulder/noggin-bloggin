{{!-- pulled out of single-post --}}
<div class="comments">
  {{!-- {{#each post.comments}} --}}
  {{!-- What does this refer to? --}}
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{!-- works the same as format_date(created_at) --}}
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>